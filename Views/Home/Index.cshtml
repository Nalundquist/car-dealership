<!DOCTYPE html>
<html lang="en-US">
	<head>
		<meta charset='utf-8'>
		<title>Welcome to Your Local Car Dealership, Mike's!</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
	</head>
	<body>
		@using Dealership.Models;
		<h1>Motley Mike's Used Cars!</h1>
		<ul>
			@if (Model.Count == 0)
			{
				<p>No cars to display!</p>
			}
			@foreach (Car car in Model)
			{
				<li>@car.MakeModel ---- $@car.Price</li>
				<li>Miles: @car.Miles | Weight: @car.Weight | MPG: @car.Mpg | Lifted: @car.Lift</li>
			}
		</ul>
	</body>
</html>